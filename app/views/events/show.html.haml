%p#notice= notice

= content_for :meta_title, "#{@event.name} | #{DEFAULT_META["meta_title"]}" 

%p
  %b Name:
  = @event.name
  %p
  %b Type of Event:
  = @event.type_of_event
  %p
  %b Location:
  = @event.location
  %p
  %b Teachers:
  = @event.teachers
  %p
  %b Performers required:
  = @event.performers
  %p
  %b Description:
  = @event.description
%p
  %b Start time:
  = @event.start_time.strftime( '%a %b %e %H:%M ')
%p
  %b End time:
  = @event.end_time.strftime( '%a %b %e %H:%M ')

= link_to 'Back to calendar', members_path, :class => 'btn-treehouse'

-if current_user.admin?
  = link_to 'Edit', edit_event_path(@event), :class => 'btn-treehouse'
  \|
  = link_to 'List all events', events_path, :class => 'btn-treehouse'
